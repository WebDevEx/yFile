{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "removeComments": false,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "lib": ["dom.iterable", "es2017", "dom"]
  },
  "exclude": [
    "node_modules",
    "toolkit/angular",
    "toolkit/dojo",
    "toolkit/react-typescript",
    "toolkit/typescript",
    "starter-kits",
    "test/**/*.js"
  ]
}
